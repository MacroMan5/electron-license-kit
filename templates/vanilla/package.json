{
  "name": "my-electron-app",
  "version": "1.0.0",
  "description": "Built with electron-license-kit",
  "main": "dist/main/index.js",
  "author": "Your Name",
  "license": "MIT",
  "scripts": {
    "copy:static": "npx copyfiles -u 1 src/renderer/**/*.html src/renderer/**/*.css dist",
    "compile:config": "npx tsc app.config.ts --outDir dist --esModuleInterop --skipLibCheck",
    "prebuild:dev": "npm run copy:static && npm run compile:config",
    "start": "tsc && npm run prebuild:dev && electron .",
    "dev": "tsc && npm run prebuild:dev && electron . --dev",
    "build": "tsc && npm run prebuild:dev && electron-builder --win",
    "build:portable": "tsc && npm run prebuild:dev && electron-builder --win portable",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.{ts,css,html}\"",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "electron-license-kit": "^0.1.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "electron": "^35.0.0",
    "electron-builder": "^25.0.0",
    "electron-updater": "^6.3.0",
    "typescript": "^5.3.0",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "prettier": "^3.1.0",
    "copyfiles": "^2.4.1"
  },
  "build": {
    "appId": "com.example.myapp",
    "productName": "My Electron App",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "assets/**/*",
      "app.config.js"
    ],
    "extraResources": [
      {
        "from": ".env.production",
        "to": ".env",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "assets/logo.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}

